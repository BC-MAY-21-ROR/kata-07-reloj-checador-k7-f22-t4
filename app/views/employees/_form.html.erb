<%= form_with(model: employee) do |form| %>
  <% if employee.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(employee.errors.count, "error") %> prohibited this employee from being saved:</h2>

      <ul>
        <% employee.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :email, style: "display: block" %>
    <%= form.text_field :email %>
  </div>

  <div class="field">
    <%= form.label :position, style: "display: block" %>
    <%= form.text_field :position %>
  </div>
  <!---
  <div>
    <%= form.label :private_code, style: "display: block" %>
    <%= form.text_field :private_code %>
  </div>
   -->
  <div class="field">
    <%= form.label :active, style: "display: block" %>
    <%= form.check_box :active %>
  </div>

  <div class="field">
     <%= form.label :branch_id, style: "display: block" %>
     <% branches_array = Branch.all.map { |branch| [branch.name, branch.id] } %>
     <%= form.select :branch_id, options_for_select(branches_array) %>
  </div>
  
  <div class="actions">
    <%= form.submit class: "primary-button"%>
  </div>
<% end %>
